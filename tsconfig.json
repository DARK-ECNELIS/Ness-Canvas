{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "npm/lib",
    "typeRoots": ["./node_modules/@types"],
    "declarationDir": "npm",
    "declarationMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/test",
    "wow"
  ]
}
